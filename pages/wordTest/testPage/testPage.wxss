/* pages/wordTest/wordTest.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.body{
  height: 100%;
  width: 100%;
}

.body .word{
  position: relative;
  height: 30%;
  width: 100%;
  vertical-align: bottom;
  font-size: 70rpx;
  font-weight: 600;
}

.body .word .wordDetail{
  position: absolute;
  bottom: -10%;
  width: 100%;
  text-align: center;
}

.body .translations{
  position: relative;
  width: 100%;
  height: 70%;
}

.body .translationList{
  display:flex;
  flex-direction: column;
  position: absolute;
  top: 25%;
  width: 100%;
  height: 80%;
}

.body .translationList .translation{
  display: table;
  align-self: center;
  width: 80%;
  height: 15%;
  margin-bottom: 45rpx;
  text-align: center;
  line-height: 100%;
  font-size: 40rpx;
  background-color: #ffffff;
}

.body .translationList .translationDetail{
  display: table-cell;
  vertical-align: middle;
}
